<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="horizontal"
    tools:context=".ui.login.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="65dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_ta_img" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="WGM Ticketing"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:text="Nama Lengkap"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:background="@drawable/bg_textfield"
            android:hint="Masukan Nama Lengkap Anda"
            android:inputType="textPersonName"
            android:textSize="13sp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/edt_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:text="Email"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginBottom="15dp"
            android:textColorHint="#808080"
            android:background="@drawable/bg_textfield"
            android:hint="Masukan Alamat Email Anda"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:textSize="13sp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/edt_email"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:text="Password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_textfield"
            android:hint="Masukan Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textColorHint="#808080"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/edt_password"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_daftar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/bg_button"
            android:layout_marginTop="30dp"
            android:text="Daftar"
            android:textAllCaps="false"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginEnd="@dimen/_3sdp"
                android:text="sudah punya akun?" />

            <TextView
                android:id="@+id/btnMove_login"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"
                android:text="Masuk"
                android:textColor="@color/black" />

        </LinearLayout>

